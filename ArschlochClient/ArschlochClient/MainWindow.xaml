<Window x:Class="ArschlochClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArschlochClient"
        mc:Ignorable="d"
        Icon="Assets/game_icon.png"
        Title="Hauptmenü" Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="Assets/Felt-Blue.jpg"/>
    </Window.Background>
    <Grid>
        <Image x:Name="ImgLogo" Source="Assets/card_hand.png" Margin="209,78,209,-20"/>
        <Label x:Name="LblHeader" Content="Arschloch" VerticalAlignment="Top" Height="63" Margin="305,10,305,0" FontSize="36" FontWeight="Bold" Foreground="Black"/>
        <Button x:Name="BtnRules" Content="Regeln" HorizontalAlignment="Left" VerticalAlignment="Top" Width="115" Margin="54,203,0,0" Height="52" Background="#FF3498DB" BorderBrush="Black" Click="BtnRules_Click"/>
        <Button x:Name="BtnJoin" Content="Spiel beitreten" HorizontalAlignment="Left" VerticalAlignment="Top" Width="115" Height="51" Margin="629,204,0,0" Background="#FF3498DB" BorderBrush="Black" Click="BtnJoin_Click"/>
    </Grid>
</Window>
