    <Window.Background>
        <ImageBrush ImageSource="Assets/Felt-Blue.jpg"/>
    </Window.Background>
    <Grid>
        <Button x:Name="BtnPass" HorizontalAlignment="Left" Width="187" Margin="10,376,0,369" Background="#FF3498DB" BorderBrush="Black" FontWeight="Bold" FontSize="22">
            <StackPanel Width="187">
                <Image Source="Assets/pass.png" Height="30" Margin="0,0,0,-2" />
                <TextBox FontSize="28" Height="35" Text="Aussetzen" Margin="20,0,27,0" Background="{x:Null}" BorderBrush="{x:Null}" VerticalAlignment="Top" Padding="0,-5,0,0" SelectionBrush="{x:Null}" IsReadOnly="True"/>
            </StackPanel>
        </Button>

        <Button x:Name="BtnNewHand" HorizontalAlignment="Left" Width="187" Margin="10,10,0,735" Background="#FF3498DB" BorderBrush="Black" FontWeight="Bold" FontSize="22" Click="connect_Click">
            <StackPanel Width="187">
                <Image Source="Assets/new_hand.png" Height="30" Margin="0,0,0,-2" />
                <TextBox FontSize="28" Height="35" Text="Connect" Margin="10,0" Background="{x:Null}" BorderBrush="{x:Null}" VerticalAlignment="Top" Padding="0,-5,0,0" SelectionBrush="{x:Null}" IsReadOnly="True"/>
            </StackPanel>
        </Button>

        <StackPanel >
            <Image x:Name="CardStack" Height="400" Margin="396,180,0,0" HorizontalAlignment="Left" Width="400" />
        </StackPanel>

        <Button x:Name="BtnCard1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="100,640,0,0" Height="170" Background="{x:Null}" BorderBrush="{x:Null}">
