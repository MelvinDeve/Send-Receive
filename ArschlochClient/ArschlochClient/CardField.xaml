<Window x:Class="ArschlochClient.CardField"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArschlochClient"
        mc:Ignorable="d"
        Icon="Assets/game_icon.png"
        Title="CardField" Height="850" Width="1200">
    <Grid Background="#3498db">
        <Button x:Name="BtnPass" HorizontalAlignment="Left" Width="187" Margin="10,354,0,391" Background="#FF2980B9" BorderBrush="Black" FontWeight="Bold" FontSize="22">
            <StackPanel Width="187">
                <Image Source="Assets/pass.png" Height="30" Margin="0,0,0,-2" />
                <TextBox FontSize="28" Height="35" Text="Aussetzen" Margin="20,0,27,0" Background="#FF2980B9" BorderBrush="{x:Null}" VerticalAlignment="Top" Padding="0,-5,0,0"/>
            </StackPanel>
        </Button>
    </Grid>
</Window>
