<Window x:Class="ArschlochHost.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArschlochHost"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="connect" Content="Start Connecting" HorizontalAlignment="Left" Margin="121,86,0,0" VerticalAlignment="Top" Width="98" Click="connect_Click"/>
        <TextBox x:Name="textBlock" HorizontalAlignment="Left" Height="234" TextWrapping="Wrap" Text="Connected Players: 0" VerticalAlignment="Top" Width="153" Margin="491,92,0,0"/>
        <Button x:Name="button" Content="Start Game" HorizontalAlignment="Left" Margin="121,143,0,0" VerticalAlignment="Top" Width="98"/>
    </Grid>
</Window>
